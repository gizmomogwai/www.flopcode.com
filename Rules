#!/usr/bin/env ruby
require 'haml'
require 'sass'

compile '/assets/styles/*' do
  filter :sass
  filter :relativize_paths, :type => :css
end

compile '*' do
  if not item.binary?
    filter :haml
    layout 'default'
    filter :relativize_paths, :type => :html
  end
end

route '/assets/styles/*' do
  item.identifier.gsub(/\/$/, '') + '.css'
end

route '*' do
  if item.binary?
    item.identifier.chop + '.' + item[:extension]
  else
    item.identifier + 'index.html'
  end
end

layout '*', :haml
